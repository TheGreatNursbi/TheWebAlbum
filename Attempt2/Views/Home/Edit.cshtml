@model Attempt2.Models.Image

<body>
    @using (Html.BeginForm("Edit", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data", style = "left: 40%; top: 30%; transform: translate(-50%m -50%); position:absolute;" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.NumberOfLikes)
        @Html.HiddenFor(model => model.Path)

        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Summary)
            @Html.TextAreaFor(model => model.Summary, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Summary)
        </div>
        <button type="submit" class="btn btn-primary">Save</button>

        <div>
            @Html.ActionLink("Back to Main Media", "Index", "Home")
        </div>
    }


</body>